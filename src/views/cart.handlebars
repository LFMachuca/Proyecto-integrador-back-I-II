<h1 class="bg-success-subtle p-2 text-center text-success w-100">CART</h1>
<section class="d-flex flex-wrap justify-content-evenly">
  {{#each cart}}
    <div class="card m-1" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title">{{this.title}}</h5>
        <p class="card-text">USD{{this.price}}</p>
        <a href="/details/{{this._id}}" class="btn btn-primary">Detalle</a>
      </div>
    </div>
  {{/each}}
</section>
<script src="/scripts/Cart.js"></script>